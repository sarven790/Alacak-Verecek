@model AlacakVerecekTakip.Models.CariHesaplarTablosu
@{
    ViewData["Title"] = "AlacakGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("AlacakEkle", "Home", FormMethod.Post))
{

    <div style="display:none">       
        @Html.TextBoxFor(x => x.ID, new { @required = "required", @class = "form-control", @placeholder = "0.00 TL" })
    </div>
    <div class="form-group mb-3">
        <b>Alacak Ekle</b>
        @Html.TextBoxFor(x => x.AlacakMiktar, new { @required = "required", @class = "form-control", @placeholder = "0.00 TL" })
    </div>

    <div class="form-group">
        <button class="form-control btn btn-primary submit px-3">Alacak Ekle</button>
    </div>

}




