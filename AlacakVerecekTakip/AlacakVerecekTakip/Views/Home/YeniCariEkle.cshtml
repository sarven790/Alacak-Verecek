@model AlacakVerecekTakip.Models.CariHesaplarTablosu
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "YeniCariEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = (int)Context.Session.GetInt32("id");
}

<form class="form-group" method="post">

    <div class="form-group mb-3">

        <b>Ad</b>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })

    </div>
    <div class="form-group mb-3">

        <b>Soyad</b>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })

    </div>
    <div class="form-group mb-3">

        <b>Telefon</b>
        @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })

    </div>
    <div class="form-group mb-3">

        <b>Adres</b>
        @Html.TextAreaFor(x => x.Adres, new { @class = "form-control" })

    </div>
    <div style="display:none">
        @Html.DropDownListFor(x => x.uyelerTablosu.ID, (List<SelectListItem>)ViewBag.dgr);
    </div>
    @Html.HiddenFor(x => x.AlacakMiktar, new { @value = "0,00" })
    @Html.HiddenFor(x => x.VerecekMiktar, new { @value = "0,00" })

    <div style="display:none">
        <input type="text" name="AlacakVerecek" value="Yok" />
        <input type="text" name="Durum" value="True" />
    </div>

    <div class="form-group mb-3">

        <button class="btn btn-info">Cari Hesap Ekle</button>

    </div>


</form>
