@model AlacakVerecekTakip.Models.UyelerTablosu

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Üye Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/signup-form-17/signup-form-17/css/style.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">          
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <img class="img" style="margin-left:120px;margin-right:120px" src="~/signup-form-17/signup-form-17/images/icons8_user.ico" />
                        <h3 class="text-center mb-4">Üye Girişi</h3>
                        <form method="post" action="/AccountController1/login" class="signup-form">
                            <div class="form-group mb-3">
                                <label class="label" for="name">Kullanıcı Adı</label>
                                <input type="text" name="KulAdi" class="form-control" placeholder="Ad girin">
                            </div>                           
                            <div class="form-group mb-3">
                                <label class="label" for="password">Şifre</label>
                                <input id="password-field" name="Sifre" type="password" class="form-control" placeholder="Şifre girin">
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>                           
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş</button>
                            </div>
                        </form>
                        <p>Üyeliğiniz yoksa! <a href="/AccountController1/UyeOl/">Üye Olun</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/signup-form-17/signup-form-17/js/jquery.min.js"></script>
    <script src="~/signup-form-17/signup-form-17/js/popper.js"></script>
    <script src="~/signup-form-17/signup-form-17/js/bootstrap.min.js"></script>
    <script src="~/signup-form-17/signup-form-17/js/main.js"></script>

</body>
</html>

